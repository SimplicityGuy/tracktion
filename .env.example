# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tracktion
POSTGRES_USER=tracktion_user
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://tracktion_user:changeme@postgres:5432/tracktion
TEST_DATABASE_URL=postgresql://tracktion_user:changeme@postgres:5432/test_tracktion

# Neo4j Configuration
NEO4J_HOST=neo4j
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_AUTH=neo4j/changeme
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme
NEO4J_TEST_URI=bolt://neo4j:7688

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER=tracktion
RABBITMQ_DEFAULT_PASS=changeme
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://tracktion:changeme@rabbitmq:5672/

# Service Configuration
FILE_WATCHER_SCAN_PATH=/data/music
FILE_WATCHER_SCAN_INTERVAL=60

# Analysis Service Configuration
ANALYSIS_QUEUE=analysis_queue
EXCHANGE_NAME=tracktion_exchange
ANALYSIS_ROUTING_KEY=file.analyze
MAX_RETRIES=3
RETRY_DELAY=5.0
MUSIC_DIRECTORY=/data/music

# Discord Notification Configuration
# Each alert type gets its own Discord channel for better organization
# Create separate webhooks in Discord for each channel

# General notifications (info, status updates)
DISCORD_WEBHOOK_GENERAL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Error alerts (non-critical errors, warnings)
DISCORD_WEBHOOK_ERRORS=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Critical system alerts (system failures, security issues)
DISCORD_WEBHOOK_CRITICAL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Tracklist generation notifications
DISCORD_WEBHOOK_TRACKLIST=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# System monitoring alerts (health checks, performance)
DISCORD_WEBHOOK_MONITORING=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Security-related alerts (authentication failures, suspicious activity)
DISCORD_WEBHOOK_SECURITY=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Optional Discord Configuration
DISCORD_RATE_LIMIT=10            # Messages per minute per channel (default: 10)
DISCORD_RETRY_ATTEMPTS=3          # Number of retry attempts for failed sends (default: 3)
DISCORD_TIMEOUT_SECONDS=10        # Request timeout in seconds (default: 10)

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
SQLALCHEMY_ECHO=false
DB_RETRY_ATTEMPTS=5
DB_RETRY_DELAY=2.0
