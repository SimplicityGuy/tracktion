# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tracktion
POSTGRES_USER=tracktion_user
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://tracktion_user:changeme@postgres:5432/tracktion
TEST_DATABASE_URL=postgresql://tracktion_user:changeme@postgres:5432/test_tracktion

# Neo4j Configuration
NEO4J_HOST=neo4j
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_AUTH=neo4j/changeme
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme
NEO4J_TEST_URI=bolt://neo4j:7688

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER=tracktion
RABBITMQ_DEFAULT_PASS=changeme
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://tracktion:changeme@rabbitmq:5672/

# Service Configuration
FILE_WATCHER_SCAN_PATH=/data/music
FILE_WATCHER_SCAN_INTERVAL=60

# Analysis Service Configuration
ANALYSIS_QUEUE=analysis_queue
EXCHANGE_NAME=tracktion_exchange
ANALYSIS_ROUTING_KEY=file.analyze
MAX_RETRIES=3
