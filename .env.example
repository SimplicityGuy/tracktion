MUSIC_DIRECTORY=/data/music

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
SQLALCHEMY_ECHO=false
DB_RETRY_ATTEMPTS=5
DB_RETRY_DELAY=2.0
